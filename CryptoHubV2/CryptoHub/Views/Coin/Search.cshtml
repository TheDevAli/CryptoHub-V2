@model IReadOnlyList<CoinGecko.Entities.Response.Coins.CoinList>;

@{
    ViewData["Title"] = "Search";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Coin Search</h1>
    <p class="lead">Search for details of cryptocurrency.</p>
    <hr />
</div>

<form asp-controller="Coin" asp-action="Search" method="get">
    <p>
        <label for="search-input">Name: </label>
        <input type="text" id="search-input" name="SearchString" placeholder="bitcoin" />
    </p>
    <p>
        <input type="submit" role="button" class="btn btn-dark" value="Search" />
    </p>
</form>

<div class="container" style="max-height: 50vh; overflow-y: scroll;">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Coin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coin in Model) //foreach may throw too many requests as so many coins
            {
                <tr>
                    <td><a asp-controller="Coin" asp-action="CoinData" asp-route-id="@coin.Id">@Html.DisplayName(coin.Name)</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
