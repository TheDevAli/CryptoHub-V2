@model IReadOnlyList<CoinGecko.Entities.Response.Coins.CoinList>

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="container" style="max-height: 50vh; overflow-y: scroll;">
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Coin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coin in Model)
            {
                <tr>
                    <td><a asp-controller="Coin" asp-action="CoinData">@Html.DisplayName(coin.Name)</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>